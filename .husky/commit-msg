echo "================================="
echo "üîπ Running commitlint..."
pnpm commitlint --edit "$1" || {
  echo "‚ùå Commit message invalid (type: summary)"
  echo "  Use one of the follwing types"
  echo "  --------"
  echo "  - feat: A new feature or capability added to the codebase."
  echo "  - fix: A bug fix or defect correction."
  echo "  - refactor: Code changes that neither fix a bug nor add a feature, e.g., restructuring, renaming, cleaning up code."
  echo "  - style: Code style / formatting changes that don‚Äôt affect behavior, e.g., whitespace, indentation, semicolons, quotes."
  echo "  - chore: Routine maintenance or tasks that don‚Äôt affect source code or tests"
  echo "  - build: Changes that affect the build system or dependencies"
  echo "  - ci: Changes to CI/CD configuration or scripts"
  echo "  - docs: Documentation only: README, comments, guides, tutorials ‚Äî no code changes."
  echo "  - perf: A change that improves performance without changing functionality."
  echo "  - revert: Reverting a previous commit. Automatically generated by Git with git revert."
  echo "  - test: Adding or updating tests only, no production code changes."
  echo ""
  exit 1
}
